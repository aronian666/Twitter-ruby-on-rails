<div class="comment">
  <a class='avatar'>
      <%= image_tag comment.user.photo.url %>
  </a>
  <div class="content">
    <a href="#" class='author'><%=comment.user.first_name + ' ' + comment.user.email.split('@')[0] %></a>
    <div class="metadata">
      <div class="date">
        <%= comment.created_at %>
      </div>
    </div>
    <div class="text">
      <%= comment.message %>
    </div>
    <div class="actions">
      <a href="#" class='reply'>Reply</a>
    </div>
  </div>
</div>
