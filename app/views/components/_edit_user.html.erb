<div class="profile">
  <div class="profile-card">
    <div class="profile-header">

    </div>
    <div class="profile-body">
      <div class="profile-user">
        <img src="https://abs.twimg.com/sticky/default_profile_images/default_profile_normal.png" class='profile-img' alt=<%=@user.first_name%> >
        <div>
          <%= form_for(@user) do |f|%>
            <%= f.text_field :first_name, placeholder: 'Nombres' %>
            <%= f.text_field :last_name, placeholder: 'Apellidos' %>
          <% end %>
        </div>
      </div>
      <div class="profile-details">
        <div class="profile-tweets">
          <div>Tweets</div>
          <div><%=@user.tweets.size%></div>
        </div>
        <div class="profile-follows">
          <div>Following</div>
          <div><%=@user.follows.size %></div>
        </div>
      </div>
    </div>
  </div>
</div>
